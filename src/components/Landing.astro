---
import { ExternalLink } from "@lucide/astro"
import links from "../content/links.json"
import projects from "../content/projects.json"

const pfpUrl = "https://github.com/CollinBrennan.png"
---

<main
  class="flex flex-col items-center text-center max-w-xl m-auto py-16 px-4 gap-10"
>
  <img src={pfpUrl} alt="Profile picture" class="rounded-full size-32" />

  <div>
    <h1 class="font-bold text-2xl sm:text-3xl">Collin Brennan</h1>
    <h1 class="font-semibold text-muted pt-1">Software Engineer</h1>
  </div>

  <p class="text-muted text-balance">
    Computer nerd and coffee addict from New Jersey, designing and building
    full-stack web apps!
  </p>

  <div class="flex gap-8 py-4">
    {
      links.map((link) => (
        <a
          href={link.url}
          target="_blank"
          aria-label={link.name}
          title={link.name}
          class="fill-muted transition-all hover:-translate-y-0.5 hover:fill-foreground size-6"
        >
          <svg
            role="img"
            viewBox="0 0 24 24"
            xmlns="http://www.w3.org/2000/svg"
          >
            <>
              <title>{link.name}</title>
              <path d={link.icon} />
            </>
          </svg>
        </a>
      ))
    }
  </div>

  <div class="flex flex-col w-full gap-2">
    {
      projects.map((project) => (
        <a
          href={project.url}
          target="_blank"
          class="group flex gap-4 items-center text-left p-4 rounded-lg bg-card hover:-translate-y-0.5 transition-all"
        >
          <div class="w-full">
            <h1 class="font-bold sm:text-lg">{project.name}</h1>
            <p class="text-muted text-sm sm:text-base">{project.description}</p>
            <ul class="pt-4 flex flex-wrap gap-2">
              {project.tags.map((tag) => (
                <li class="font-bold text-xs rounded-full bg-accent px-1.5">
                  {tag}
                </li>
              ))}
            </ul>
          </div>
          <div>
            <ExternalLink class="text-muted group-hover:text-foreground" />
          </div>
        </a>
      ))
    }
  </div>
</main>

