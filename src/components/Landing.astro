---
import { PhGithubLogo, PhLinkedinLogo, PhEnvelope } from "phosphor-icons-astro"

const pfpUrl = "https://github.com/CollinBrennan.png"

const links = [
  {
    name: "Github",
    url: "https://github.com/CollinBrennan",
    icon: PhGithubLogo,
  },
  {
    name: "LinkedIn",
    url: "https://www.linkedin.com/in/collinrbrennan",
    icon: PhLinkedinLogo,
  },
  {
    name: "Email",
    url: "mailto:contact@collinbrennan.dev",
    icon: PhEnvelope,
  },
]

const projects = [
  {
    name: "Skill Chronicle",
    url: "https://skill-chronicle.vercel.app/",
    description: "Skill-learning log that tracks progress over time.",
    tags: [
      { name: "Next.js", emoji: "▲" },
      { name: "PostgreSQL", emoji: "🐘" },
      { name: "Tailwind", emoji: "🌊" },
    ],
  },
  {
    name: "Guitar Ecommerce Site",
    url: "https://github.com/CollinBrennan/guitar-shop",
    description: "Online store for customizable guitars.",
    tags: [
      { name: "React", emoji: "⚛️" },
      { name: "Express", emoji: "🚅" },
      { name: "MongoDB", emoji: "🌿" },
      { name: "Node", emoji: "🟩" },
      { name: "Stripe API", emoji: "💳" },
    ],
  },
  {
    name: "Wrdz",
    url: "https://wrdz-7570a.web.app/",
    description: "Highly customizable random word generator.",
    tags: [
      { name: "React", emoji: "⚛️" },
      { name: "Node", emoji: "🟩" },
      { name: "Firebase", emoji: "🔥" },
      { name: "Tailwind", emoji: "🌊" },
    ],
  },
  {
    name: "This website!",
    url: "https://github.com/CollinBrennan/personal-site",
    description: "Source code for my personal website.",
    tags: [
      { name: "Astro", emoji: "🚀" },
      { name: "Tailwind", emoji: "🌊" },
    ],
  },
]
---

<main
  class="flex flex-col items-center text-center max-w-md m-auto pt-16 px-4 gap-8"
>
  <img src={pfpUrl} class="rounded-full size-32" />

  <div>
    <h1 class="font-bold text-2xl">Collin Brennan</h1>
    <h1 class="font-semibold text-muted">Software Engineer</h1>
  </div>

  <p class="text-muted text-balance">
    Computer science graduate and coffee addict from New Jersey. Designing and
    building full-stack web apps!
  </p>

  <div class="flex gap-6">
    {
      links.map((link) => (
        <a
          href={link.url}
          target="_blank"
          aria-label={link.name}
          title={link.name}
        >
          <link.icon size={32} aria-hidden={true} />
        </a>
      ))
    }
  </div>

  <div class="flex flex-col w-full gap-2">
    {
      projects.map((project) => (
        <a
          href={project.url}
          target="_blank"
          class="text-left p-4 border border-border rounded-lg"
        >
          <h1 class="font-bold">{project.name}</h1>
          <p class="text-muted">{project.description}</p>
          <ul class="pt-4 flex flex-wrap gap-x-4">
            {project.tags.map((tag) => (
              <li class="font-bold text-xs">
                <span aria-hidden={true}>{tag.emoji}</span>
                <span class="text-nowrap">{tag.name}</span>
              </li>
            ))}
          </ul>
        </a>
      ))
    }
  </div>
</main>
